@page "/viewinventory/{id}"
@using Microsoft.AspNetCore.SignalR.Client
@using SonicWarehouseManagement.Shared
@inject HttpClient Http
@inject NavigationManager NavigationManager

<h2>Inventory</h2>
<hr />
<p>Transaction Type: <b>@inv.Transaction_Type</b></p>
<p>Date: <b>@inv.Date</b></p>
<table class="table">
    <thead>
        <tr>
            <th>Site</th>
            <th>Item Code</th>
            <th>Item Description</th>
            <th>Quantity</th>
            <th>Uom</th>
            <th>Posting Date</th>
            <th>Document Date</th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>

@code {
    Inventory inv = new Inventory();
    Inventory[] inlist;

    private HubConnection hubCon;

    [Parameter]
    public string id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        inv     = await Http.GetJsonAsync<Inventory>("api/Inventories/" + id);

        hubCon = new HubConnectionBuilder()
            .WithUrl(NavigationManager.ToAbsoluteUri("/InventoryHub"))
            .Build();

        await hubCon.StartAsync();
    }

    public bool IsConnected =>
        hubCon.State == HubConnectionState.Connected;

    Task SendMessage() => hubCon.SendAsync("SendMessage");

    public void Dispose()
    {
        _ = hubCon.DisposeAsync();
    }
}
